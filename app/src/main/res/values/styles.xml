<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="edittext_background" parent="@android:style/Widget.EditText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
        <item name="hintTextColor">@color/color_gray</item>
        <item name="android:background">@drawable/drawable_corner_edittext_purple</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="NewBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/drawable_corner_bottomsheet_above</item>
    </style>

    <style name="CustomBottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="bottomSheetStyle">@style/NewBottomSheetStyle</item>
    </style>

</resources>